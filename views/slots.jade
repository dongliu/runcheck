extends layout

block head
  link(rel='stylesheet', href='/datatables/media/css/dataTables.bootstrap.min.css')
  title RunCheck slots


block content
  .container-fluid
    br
    #message
      #modal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='modalLabel', aria-hidden='true')
        .modal-dialog
          .modal-content
            .modal-header
              h3#modalLabel
            .modal-body
              .panel
                .panel-heading

            .modal-footer
    form.form-inline
      select.form-control
        option(value='Select') Select
        option(value='two') Two
        option(value='three') Three
        option(value='four') Four
        option(value='five') Five
      button.btn.btn-primary#addGroup
        | Add to group
    br
    #slots.tab-pane.active
      table#slot-table.table.table-bordered.table-hover


block js
  script(type='text/javascript', src='/datatables/media/js/jquery.dataTables.js')
  script(type='text/javascript', src='/datatables/media/js/dataTables.bootstrap.js')
  script(type='text/javascript', src='/javascripts/table.js')
  script(type='text/javascript', src='/javascripts/slot-table.js')
  script(type='text/javascript', src='/javascripts/slot-action.js')