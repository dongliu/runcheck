extends layout-history

block head
  link(rel='stylesheet', href='/datatables/media/css/dataTables.bootstrap.min.css')
  title RunCheck slot


block content
    br
    #message
      #modal.modal.fade(tabindex='-1', role='dialog', aria-labelledby='modalLabel', aria-hidden='true')
        .modal-dialog
          .modal-content
            .modal-header
              h3#modalLabel
            .modal-footer
    .panel.panel-default
      .panel-heading
        strong Basic Infomation
      .panel-body
        .table-responsive
          table.table.table-condensed
            thead
              tr
                th Name
                th Device type
                th Approval status
                th Slot group
                th Installed device
            tbody
              tr
                td= slot.name
                td= slot.deviceType
                -
                  var statusMap = {0: 'Device not installed',
                    1: 'Device installed',
                    2: 'DO OK',
                    2.5: 'Slot DRR checklist',
                    3: 'AM approved',
                    4:'DRR approved'
                  };
                td= statusMap[slot.status]
                if (slotGroup)
                  - var sotGroupUrl = {'href': '/slotGroups/' + slotGroup._id};
                  td
                    a&attributes(sotGroupUrl) #{slotGroup.name}
                else
                  td N/A
                if (slot.device)
                  - var deviceUrl = {'href': '/devices/' + slot.device.id};
                  td
                    a&attributes(deviceUrl) #{slot.device.serialNo}
                else
                  td N/A
        button#list-slot.btn.btn-default.fa.fa-chevron-down(aria-hidden='true',title='show more details')
        .row
          .col-md-6.col-md-offset-3
            .table-responsive
              table.table
                tbody#slot-detail
                  tr
                    th Accumulated center-to-center Length (m)
                    td= slot.center2centerLength
                  tr
                    th Accumulated end-to-end Length (m)
                    td= slot.end2endLength
                  tr
                    th Associated area
                    td=slot.area
                  tr
                    th Beam line position (dm)
                    td= slot.beamlinePosition
                  tr
                    th Comment
                    td= slot.comment
                  tr
                    th Device naming
                    td= slot.deviceNaming
                  tr
                    th Element Effective Length (m)
                    td= slot.effectiveLength
                  tr
                    th Element Flange to Flange Length (m)
                    td= slot.flangeLength
                  tr
                    th Element name
                    td= slot.elementName
                  tr
                    th Global Coordinate X (m)
                    td= slot.coordinateX
                  tr
                    th Global Coordinate Y (m)
                    td= slot.coordinateY
                  tr
                    th Global Coordinate Z (m)
                    td= slot.coordinateZ
                  tr
                    th Leve of care
                    td= slot.level
                  tr
                    th Minimum Beam Pipe Inner Diameter (mm)
                    td= slot.InnerDiameter
                  tr
                    th Machine mode
                    td= slot.machineMode
                  tr
                    th Owner
                    td= slot.owner
                  tr
                    th PLACE HOLDER
                    td= slot.placeHolder
                  tr
                    th System
                    td= slot.system
                  tr
                    th Sub-system
                    td= slot.subsystem
    button.btn.btn-space.btn-primary#DOApprove DO Approve
    button.btn.btn-space.btn-primary#AMpprove AM Approve
    button.btn.btn-space.btn-primary#DRRApprove DRR Approve
    br
    br
    .panel.panel-default
        .panel-heading
          strong Checklist
        .panel-body

block js
  script(type='text/javascript', src='/datatables/media/js/jquery.dataTables.js')
  script(type='text/javascript', src='/datatables/media/js/dataTables.bootstrap.js')
  script(type='text/javascript', src='/javascripts/slot-action.js')